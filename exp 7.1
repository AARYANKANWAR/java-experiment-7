import java.sql.*;

public class FetchEmployeeData {
    public static void main(String[] args) {
        // Database credentials
        String url = "jdbc:mysql://localhost:3306/your_database_name"; // replace with your DB name
        String user = "root";   // replace with your MySQL username
        String password = "your_password"; // replace with your MySQL password

        try {
            // 1. Load the MySQL JDBC driver
            Class.forName("com.mysql.cj.jdbc.Driver");

            // 2. Establish connection to the database
            Connection con = DriverManager.getConnection(url, user, password);
            System.out.println("✅ Database connected successfully!");

            // 3. Create a statement object to send SQL queries
            Statement stmt = con.createStatement();

            // 4. Execute a SELECT query
            String query = "SELECT EmpID, Name, Salary FROM Employee";
            ResultSet rs = stmt.executeQuery(query);

            // 5. Display the results
            System.out.println("\n--- Employee Details ---");
            while (rs.next()) {
                int empId = rs.getInt("EmpID");
                String name = rs.getString("Name");
                double salary = rs.getDouble("Salary");

                System.out.println("EmpID: " + empId + ", Name: " + name + ", Salary: " + salary);
            }

            // 6. Close resources
            rs.close();
            stmt.close();
            con.close();
            System.out.println("\n✅ Data fetched successfully!");

        } catch (ClassNotFoundException e) {
            System.out.println("❌ JDBC Driver not found!");
            e.printStackTrace();
        } catch (SQLException e) {
            System.out.println("❌ Database error!");
            e.printStackTrace();
        }
    }
}
